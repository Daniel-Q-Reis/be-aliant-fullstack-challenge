{
    "info": {
        "_postman_id": "be-aliant-fullstack-challenge",
        "name": "be-aliant API",
        "description": "Coleção completa da API be-aliant. Execute POST /login para salvar o token automaticamente.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        },
        {
            "key": "orderId",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth & Users",
            "item": [
                {
                    "name": "POST /users — Criar usuário admin",
                    "description": "Cria o usuário admin. Pule esta etapa se já executou o seed script (o 409 Conflict é esperado nesse caso).",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/users",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "users"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Admin\",\n  \"email\": \"admin@be-aliant.com\",\n  \"password\": \"123456\"\n}"
                        }
                    }
                },
                {
                    "name": "POST /login — Autenticar (salva token automaticamente)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const res = pm.response.json();",
                                    "if (res.access_token) {",
                                    "  pm.collectionVariables.set('token', res.access_token);",
                                    "  console.log('Token salvo:', res.access_token.substring(0, 30) + '...');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "login"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@be-aliant.com\",\n  \"password\": \"123456\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "POST /orders — Criar pedido",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/orders",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"description\": \"Pedido de Notebook\",\n  \"totalAmount\": 5000.00\n}"
                        }
                    }
                },
                {
                    "name": "GET /orders — Listar todos",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/orders",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders"
                            ]
                        }
                    }
                },
                {
                    "name": "GET /orders?status=PENDENTE — Filtrar por status",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/orders?status=PENDENTE",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "PENDENTE"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "GET /orders/:id — Detalhe do pedido",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/orders/{{orderId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "orders",
                                "{{orderId}}"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Health",
            "item": [
                {
                    "name": "GET /health — Health check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/health",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "health"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}