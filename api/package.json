{
    "name": "api",
    "version": "1.0.0",
    "description": "be-aliant API â€“ NestJS Monolito Modular",
    "scripts": {
        "build": "nest build",
        "start": "node dist/api/src/main",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "seed": "ts-node -r tsconfig-paths/register src/database/seed.ts"
    },
    "dependencies": {
        "@be-aliant/common": "*",
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/typeorm": "^10.0.0",
        "typeorm": "^0.3.0",
        "mysql2": "^3.0.0",
        "@nestjs/config": "^3.0.0",
        "joi": "^17.0.0",
        "@nestjs/jwt": "^10.0.0",
        "@nestjs/passport": "^10.0.0",
        "@nestjs/mapped-types": "^2.0.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.0",
        "bcryptjs": "^2.4.3",
        "class-validator": "^0.14.0",
        "class-transformer": "^0.5.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0",
        "@aws-sdk/client-sqs": "latest",
        "nestjs-pino": "^3.5.0",
        "pino-http": "^8.3.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/bcryptjs": "^2.4.0",
        "@types/passport-jwt": "^3.0.0",
        "@types/express": "^4.17.0",
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "jest": "^29.0.0",
        "ts-jest": "^29.0.0",
        "typescript": "^5.0.0",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "pino-pretty": "^10.0.0",
        "ts-node": "^10.9.0",
        "tsconfig-paths": "^4.2.0",
        "dotenv": "^16.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@be-aliant/common$": "<rootDir>/../../common/src",
            "^@be-aliant/common/(.*)$": "<rootDir>/../../common/src/$1"
        }
    }
}