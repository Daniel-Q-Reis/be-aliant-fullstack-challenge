{
    "name": "worker",
    "version": "1.0.0",
    "description": "be-aliant Worker â€“ NestJS Standalone SQS Consumer",
    "scripts": {
        "build": "nest build",
        "start": "node dist/worker/src/main",
        "start:dev": "ts-node src/main.ts",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "dependencies": {
        "@be-aliant/common": "*",
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/config": "^3.0.0",
        "@nestjs/typeorm": "^10.0.0",
        "typeorm": "^0.3.0",
        "mysql2": "^3.0.0",
        "@aws-sdk/client-sqs": "latest",
        "joi": "^17.0.0",
        "rxjs": "^7.8.0",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "jest": "^29.0.0",
        "ts-jest": "^29.0.0",
        "typescript": "^5.0.0",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@be-aliant/common$": "<rootDir>/../../common/src",
            "^@be-aliant/common/(.*)$": "<rootDir>/../../common/src/$1"
        }
    }
}